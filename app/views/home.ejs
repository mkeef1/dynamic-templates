<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic Templates</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <h1 style="color: red;background-color: yellow">Welcome to dynamic templates</h1>

    <h2>Multiply 3 * 3 = <%= 3*3 %></h2>
    <h2>A random number between 3 and 12 <%= Math.floor(Math.random() + 10) + 3 %></h2>
    <% var a = 3, b = 2 %>
    <p><%= a + b %></p>

    <% if(a===3){ %>
      <p>a is 3</p>

      <% }else{ %>
      <p>a is not 3</p>
      <% } %>

      <% var fonts = ['Oswald', 'PT Sans Narrow', 'Raleway']%>
      <% var colors = ['blue', 'green', 'yellow', 'orange']%>
      <% for(var i = 0; i < colors.length; i++) { %>
      <% if(i + 1===colors.length){var x=colors[0]}else{ var x= colors[i +1]}%>
      <p style="font-family:<%= fonts[i%3]%>;color:<%=colors[i]%>; font-size:<%= 12 + (i*2) %>px; background-color:<%=x%>"><%= colors[i] %></p>
        <% } %>
  </body>
</html>


